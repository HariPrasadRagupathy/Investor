<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center"
    android:id="@+id/nip_ll_investmentplan"
    android:orientation="vertical">

   <TextView
       android:id="@+id/nip_tv_planname"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Plan Name"
       android:layout_gravity="center"
       />
    <TextView
        android:id="@+id/nip_tv_investment_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Investment : 10000 EUR"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/nip_tv_investment_roi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate Of Interest : 0.024%"
        android:layout_gravity="center"
        />
</LinearLayout>
